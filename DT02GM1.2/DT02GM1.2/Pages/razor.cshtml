@page
@model DT02GM1._2.Pages.razorModel

@{ ViewData["Title"] = "razor";

    string[] courses = { "DT057G, WebbutvecklingI", "DT084G, Introduktion till programmering i javaScript", "DT163G, Digital Bildbehandling för webb", "GD008G, Typografi och form för webb", "DT003G, Databaser", "DT093g, Webbutveckling II", "DT162G, JavaScriptbaserad webbutveckling", "DT152G, webbdesign för CMS", "DT173G, Webbutveckling II", "IK060G, Projektledning" }; }

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{ var date = DateTime.Now;
    string wk = DateTime.Today.DayOfWeek.ToString(); }

<h1>Information</h1>

@if (String.Equals(wk, "Monday"))
{
<h4 class="write">Idag är det måndag</h4> }
else
{
<h4 class="write">Idag är det inte måndag</h4>}

<h4 class="write">Datum/Klockslag: @date</h4>

<h4 class="write">Kurser jag läst:</h4>

<ul>
    @foreach (var course in courses)
    {
<li>@course</li>}
</ul>


